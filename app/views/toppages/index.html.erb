<div class="row">
  <aside class="col-sm-4">
    <%= form_with(model: @micropost) do |f| %>
      <div class="mb-3">
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
      </div>
      <%= f.submit 'Post', class: 'btn btn-primary w-100' %>
    <% end %>
  </aside>
  <div class="col-sm-8">
    <%= render 'microposts/microposts', microposts: @microposts %>
  </div>
</div>
